    <connect fromModule="pyplot" fromPort="time-series" toModule="chopper" toPort="Gas_Release"/> 
   </network>

   <!-- connected modules -->
   <network name="demuth1">
    <!-- For self-connection of a module: fromPort is use type; toPort is input type-->
    <connect fromModule="fuel-accumulation" fromPort="solids" toModule="chopper" toPort="Fuel_Solid"/> 
    <connect fromModule="dissolver" fromPort="solids" toModule="fuel-accumulation" toPort="fuel-segments"/> 
    <connect fromModule="condenser" fromPort="vapor" toModule="dissolver" toPort="vapor"/> 
    <connect fromModule="dissolver" fromPort="condenser-stream" toModule="condenser" toPort="condensate"/> 
    <connect fromModule="pyplot" fromPort="time-series" toModule="dissolver" toPort="vapor"/> 
   </network>

  </application>

 </simulation>

</cortixConfig>
