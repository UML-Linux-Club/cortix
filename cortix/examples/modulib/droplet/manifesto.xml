<module_manifesto name='droplet' version='0.0'>

 <!-- Ports have two types: use and provide -->

    <!-- use ports -->
    <port type='use'     mode='file.pkl' multiplicity='1'>wind-velocity</port>

    <!-- provide ports -->
    <port type='provide' mode='file.xml' multiplicity='1'>droplet-position</port>
    <port type='provide' mode='file.xml' multiplicity='1'>state</port>
    <port type='provide' mode='file.pkl' multiplicity='1'>output</port>

    <port_doc port_name='output'>
        Wind velocity and droplet position are three-dimensional Cartesian.
    </port_doc>

